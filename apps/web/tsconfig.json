{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@repo/api/*": ["../../packages/api/src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*"]
		},
		"types": ["@types/react", "@types/react-dom"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
